<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp">


    <CheckBox
        android:id="@+id/radioButton_shopname"
        style="@style/Widget.AppCompat.CompoundButton.RadioButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="商家名称"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="状态"
        app:layout_constraintBottom_toBottomOf="@+id/radioButton_shopname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintStart_toEndOf="@+id/radioButton_shopname"
        app:layout_constraintTop_toTopOf="@+id/radioButton_shopname"
        app:layout_constraintVertical_bias="0.538" />


    <ImageView
        android:id="@+id/img_orderimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioButton_shopname" />

    <TextView
        android:id="@+id/textView_time"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="下单时间："
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_orderimage"
        app:layout_constraintTop_toTopOf="@+id/img_orderimage" />

    <TextView
        android:id="@+id/textView_price"
        android:layout_width="129dp"
        android:layout_height="47dp"
        android:text="总价："
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView_time"
        app:layout_constraintStart_toEndOf="@+id/img_orderimage"
        app:layout_constraintTop_toBottomOf="@+id/textView_time" />

    <TextView
        android:id="@+id/textView_orderState"
        android:layout_width="73dp"
        android:layout_height="61dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="状态"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.916"
        app:layout_constraintStart_toEndOf="@+id/textView_time"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>